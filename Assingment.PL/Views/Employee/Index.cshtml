@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Employees</h1>
<br />   
<a asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />
<br />
@if (Model?.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(a => a.Name)</th>
                <th>@Html.DisplayNameFor(a => a.DateOfCreation)</th>
                <th>@Html.DisplayNameFor(a => a.Address)</th>
                <th>@Html.DisplayNameFor(a => a.Email)</th>
                <th>@Html.DisplayNameFor(a => a.Salary)</th>
                <th>@Html.DisplayNameFor(a => a.HireDate.Day)-@Html.DisplayNameFor(a => a.HireDate.Month)-@Html.DisplayNameFor(a => a.HireDate.Year)</th>
                <th>@Html.DisplayNameFor(a => a.IsActive)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(a => item.Name)</td>
                <td>@Html.DisplayFor(a => item.DateOfCreation)</td>
                <td>@Html.DisplayFor(a => item.Address)</td>
                <td>@Html.DisplayFor(a => item.Email)</td>
                <td>@Html.DisplayFor(a => item.Salary)</td>
                <td>@Html.DisplayFor(a => item.HireDate)</td>
                <td>@Html.DisplayFor(a => item.IsActive)</td>
                <td>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fas fa-eye"></i>Details
                    </a>
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-eye"></i>Edit
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fas fa-eye"></i>Delete
                    </a>
                </td>
            </tr>
           
        }
            </tbody>
        </table>





    }
    else
    {
        <div class="alert alert-warning">
            <h4>No Employees Found!</h4>
        </div>
    }

