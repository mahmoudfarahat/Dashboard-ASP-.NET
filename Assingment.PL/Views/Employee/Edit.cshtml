@model EmployeeViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Update Employee</h1>
<br />


<div class="row">
    <div class="col-6">
        <div asp-validation-summary="All"></div>
        <form asp-action="Edit" asp-controller="Employee" enctype="multipart/form-data">
            <partial name="PartialViews/CreateUpdatePartialView" model="@Model" />
            <br />
            <input type="submit" value="Add" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>

